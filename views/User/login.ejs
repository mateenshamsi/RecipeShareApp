<% layout('./layouts/boilerplate')%> 
<div class="row">
    <h1 class="text-center">Login Form</h1>

    <div class="col-6 offset-3">
        <form action="/login" class="was-validated novalidate" method="POST">
            <div class="mb-3"> 
            <label class="form-label" for="username">Enter Username</label>
            <input type="text" class="form-control" required name="username" >
            <div class="valid-feedback"> 
                Looks Good !!
            </div>
            </div>
            
         
            <div class="mb-3"> 
            <label for="password" class="form-label ">Password</label>
            <input required type="password" id="password" class="form-control" name="password">
            </div>
            <button class="btn btn-success mt-2" type="submit">Login</button>
        </form>
       
    </div>